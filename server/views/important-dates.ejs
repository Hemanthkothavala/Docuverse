<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>Important Dates</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
    <style>
        html {
            scroll-behavior: smooth;
        }

        .rotate-180 {
            transform: rotate(180deg);
        }

        .fade-up {
            animation: fadeUp 0.6s ease forwards;
            opacity: 0;
            transform: translateY(20px);
        }

        @keyframes fadeUp {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        ::-webkit-scrollbar {
            width: 6px;
        }

        ::-webkit-scrollbar-thumb {
            background: #c084fc;
            border-radius: 10px;
        }
    </style>
</head>

<body
    class="bg-gradient-to-br from-purple-50 via-white to-purple-100 min-h-screen text-gray-800 font-sans overflow-x-hidden">

    <div class="w-full max-w-7xl mx-auto px-4 py-10 box-border">
        <!-- Header -->
        <div class="text-center mb-10 fade-up">
            <h1 class="text-4xl sm:text-5xl font-extrabold text-purple-700 tracking-tight">üìÖ Important Dates</h1>
            <p class="mt-3 text-lg sm:text-xl text-gray-600">
                Hello, <span class="font-bold text-purple-900">
                    <%= name %>
                </span>
            </p>
            <div class="flex justify-center mt-4">
                <lottie-player src="https://assets1.lottiefiles.com/private_files/lf30_m6j5igxb.json"
                    background="transparent" speed="1" class="w-28 h-28 max-w-full" loop autoplay></lottie-player>
            </div>
        </div>

        <% if (documents.length===0) { %>
            <div class="text-center text-gray-500 text-xl fade-up">No important dates found. üì≠</div>
            <% } else { %>
                <div class="space-y-6 fade-up">
                    <% documents.forEach((doc, index)=> { %>
                        <div
                            class="w-full rounded-2xl bg-white/80 backdrop-blur-md border border-purple-200 shadow-lg transition-all hover:shadow-xl duration-300">
                            <button onclick="toggleDropdown('dropdown-<%= index %>')"
                                class="w-full flex justify-between items-center px-4 sm:px-6 py-4 bg-purple-200 hover:bg-purple-300 transition rounded-t-2xl">
                                <div
                                    class="flex items-center gap-2 text-purple-900 font-semibold text-base sm:text-lg truncate max-w-[85%] sm:max-w-full">
                                    üìÅ <span class="truncate">
                                        <%= doc.filename %>
                                    </span>
                                </div>
                                <svg id="icon-<%= index %>"
                                    class="w-6 h-6 text-purple-800 transition-transform duration-300" fill="none"
                                    stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M19 9l-7 7-7-7" />
                                </svg>
                            </button>

                            <div id="dropdown-<%= index %>" class="hidden px-4 sm:px-6 py-5">
                                <% if (doc.dates.length===0) { %>
                                    <p class="text-gray-500 italic">No dates found for this document.</p>
                                    <% } else { %>
                                        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5">
                                            <% doc.dates.forEach(d=> { %>
                                                <div
                                                    class="p-4 bg-purple-50 border border-purple-300 rounded-xl shadow hover:shadow-md hover:-translate-y-1 transition-all duration-200">
                                                    <div
                                                        class="flex items-center gap-2 mb-2 text-purple-700 font-medium">
                                                        üìå <%= d.date %>
                                                    </div>
                                                    <p
                                                        class="text-gray-700 text-sm leading-relaxed break-words whitespace-pre-wrap">
                                                        <%= d.description %>
                                                    </p>
                                                </div>
                                                <% }) %>
                                        </div>
                                        <% } %>
                            </div>
                        </div>
                        <% }) %>
                </div>
                <% } %>
    </div>

    <!-- Toggle Script -->
    <script>
        function toggleDropdown(id) {
            const content = document.getElementById(id);
            const icon = document.getElementById('icon-' + id.split('-')[1]);
            content.classList.toggle('hidden');
            icon.classList.toggle('rotate-180');
        }

        window.addEventListener('load', () => {
            document.querySelectorAll('.fade-up').forEach(el => {
                el.classList.add('fade-up');
            });
        });
    </script>
</body>

</html>